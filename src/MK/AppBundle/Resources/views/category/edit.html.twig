{% extends 'MKAppBundle::content.html.twig' %}

{% block header_content %}
    <div class="col-lg-12">
        <h1 class="page-header">Edit category</h1>
    </div>
{% endblock %}

{% block content %}
    {{ form_start(form) }}
    <div class="form-group">
        {{ form_label(form.name) }}
        {{ form_widget(form.name, {   'attr': {'class': 'form-control', 'placeholder':'form.category.name'|trans} }) }}
    </div>

    <div class="form-group">
        {{ form_label(form.color) }}
        <div class="input-group colorpicker-component colorpicker-input">
            {{ form_widget(form.color, {   'attr': {'class': 'form-control', 'readonly':'readonly', 'placeholder':'form.category.color'|trans} }) }}
            <span class="input-group-addon"><i></i></span>
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.reminder) }}
        {{ form_widget(form.reminder) }}
    </div>
    <div class="form-group">
        {{ form_widget(form.save, {   'attr': {'class': 'btn btn-primary', 'placeholder':'form.task.save'|trans} }) }}
    </div>
    {{ form_end(form) }}
{% endblock %}