{% extends 'MKAppBundle::content.html.twig' %}

{% block content %}
    <div class="row user-profile-wrapper bg-white">
        <div class="col-sm-12">
            <p>
                {{ 'views.archive_page'|trans }}
            </p>

            {% for task in tasks %}
                <a href="#" class="list-group-item" data-task-id="{{ task.id }}">
                    {{ task.title|truncate(25, true) }}

                        <span class="text-muted small">
                    <em>
                           {{ task.doneDate|date('Y-m-d H:i:s') }}
                    </em>
                </span>
                    <span data-action="{{ path('edit_task', {'id':task.id}) }}"
                          class="glyphicon glyphicon-pencil pull-right edit-task">
                    </span>
                </a>
            {% endfor %}
        </div>
    </div>
{% endblock %}

