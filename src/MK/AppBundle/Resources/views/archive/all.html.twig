<div class="list-group">
    {% for task in tasks %}
        <a href="#" class="list-group-item" data-task-id="{{ task.id }}">
            {{ task.title|truncate(25, true) }}
            &nbsp;
            <span class="text-muted small label label-success">
                    <em>
                           {{ task.doneDate|date('Y-m-d H:i:s') }}
                    </em>
                    </span>
            &nbsp;
            <span class="text-muted small label label-info">
                    <em>
                           {{ task.category.name }}
                    </em>
                    </span>

            <span data-action="{{ path('edit_task', {'id':task.id}) }}" data-category="{{ task.category.id }}"
                  class="glyphicon glyphicon-pencil pull-right edit-task">
                    </span>
        </a>
    {% endfor %}
</div>