{% extends 'MKAppBundle::content.html.twig' %}

{% block content %}
    <div class="row home-categories">

        {% for key, category in categories %}
            <div class="col-md-4 home-category-box" data-action="{{ url('show_ajax_category', {'id':category.id}) }}">
                Loading...
            </div>
        {% endfor %}
    </div>
    <div class="row home-categories match-my-cols">
        <div class="col-md-4">

        </div>

        <div class="col-md-4">
            <h3>
                &nbsp;
            </h3>
            <div class="home-add-category text-center">
                <button type="button" class="btn btn-default btn-lg">
                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                    Dodaj nową kategorię
                </button>
            </div>
        </div>
    </div>


    <!-- Modal -->
    <div id="addNewTask" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Dodaj nowe zadanie</h4>
                </div>
                <div class="modal-body"></div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-info action-submit" data-action=""
                            data-loading-text="<i class='glyphicon glyphicon-refresh'></i> Processing">
                        Dodaj
                    </button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>


{% endblock %}