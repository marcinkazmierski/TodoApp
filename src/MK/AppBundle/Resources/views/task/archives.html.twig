{% extends 'MKAppBundle::content.html.twig' %}

{% block header_content %}

    <div class="col-lg-12">
        <h1 class="page-header">Archives tasks <span class="badge">{{ tasks.getTotalItemCount }}</span></h1>
    </div>

{% endblock %}

{% block content %}

    {% for key, task in tasks %}

        <p class="list-group-item">
            <i class="fa fa-tasks fa-fw"></i> {{ task.title }} <span class="badge">{{ task.category.name }}</span>
            
            <a href="{{ path('edit_task', {'id':task.id}) }}" class="pull-right icon-link-action action-edit">
                <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
            </a>
            <a href="#" data-task-id="{{ task.id }}" class="pull-right icon-link-action action-delete">
                <i class="fa fa-trash" aria-hidden="true"></i>
            </a>

            <span class="pull-right text-muted small">
                <em> {{ task.deadline|date('Y-m-d H:i:s') }}</em>
            </span>
        </p>

    {% endfor %}

    <div class="navigation text-center">
        {{ knp_pagination_render(tasks) }}
    </div>
{% endblock %}
