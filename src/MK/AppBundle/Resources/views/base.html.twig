<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}TODOapp | Home{% endblock %}</title>

    <!-- Bootstrap Core CSS -->
    <link href="{{ asset('bundles/mkapp/libs/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet"/>

    <link href="{{ asset('bundles/mkapp/assets/css/jquery.datetimepicker.css') }}" rel="stylesheet"/>
    <link href="{{ asset('bundles/mkapp/libs/colorpicker/css/bootstrap-colorpicker.min.css') }}" rel="stylesheet"/>

    <!-- Custom Fonts -->
    <link href="{{ asset('bundles/mkapp/libs/sb-admin/bower_components/font-awesome/css/font-awesome.min.css') }}"
          rel="stylesheet" type="text/css">

    <link href="{{ asset('bundles/mkapp/assets/css/main.css') }}" rel="stylesheet"/>
    {% block stylesheets %}{% endblock %}
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body class="{% block body_classes_names %}{% endblock %}">


<nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
                    aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Menu</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li class="active"><a href="#">Home</a></li>
                <li><a href="#about">About</a></li>
                <li><a href="#contact">Contact</a></li>
            </ul>
        </div><!--/.nav-collapse -->
    </div>
</nav>

<div class="container main-container">
    <div class="row">
        <div class="col-sm-12">
            {% block body %}{% endblock %}
        </div>
    </div>
</div>

<footer class="footer">
    <div class="container">
        <p class="text-muted text-center">
            {{ 'now'|date('Y') }} &copy; <a href="#"> Marcin Ka≈∫mierski</a>
        </p>
    </div>
</footer>

{% block javascripts %}
    <!-- jQuery -->
    <script src="{{ asset('bundles/mkapp/libs/jquery/jquery.min.js') }}"></script>
    <script src="{{ asset('bundles/mkapp/libs/bootstrap/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('bundles/mkapp/assets/js/jquery.datetimepicker.js') }}"></script>
    <script src="{{ asset('bundles/mkapp/libs/colorpicker/js/bootstrap-colorpicker.min.js') }}"></script>

    <!-- Custom Theme JavaScript -->
    <script src="{{ asset('bundles/mkapp/assets/js/ajax.js') }}"></script>
    <script src="{{ asset('bundles/mkapp/assets/js/main.js') }}"></script>
{% endblock %}
</body>
</html>