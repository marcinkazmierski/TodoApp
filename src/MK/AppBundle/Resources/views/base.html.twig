<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
    <!-- Bootstrap Core CSS -->
    <link href="{{ asset('bundles/mkapp/libs/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet"/>
    <link href="{{ asset('bundles/mkapp/libs/bootstrap/css/bootstrap-theme.min.css') }}" rel="stylesheet"/>

    <link href="{{ asset('bundles/mkapp/assets/css/jquery.datetimepicker.css') }}" rel="stylesheet"/>
    <link href="{{ asset('bundles/mkapp/libs/colorpicker/css/bootstrap-colorpicker.min.css') }}" rel="stylesheet"/>

    <!-- MetisMenu CSS -->
    <link href="{{ asset('bundles/mkapp/libs/sb-admin/bower_components/metisMenu/dist/metisMenu.min.css') }}"
          rel="stylesheet">

    <!-- Timeline CSS -->
    <link href="{{ asset('bundles/mkapp/libs/sb-admin/dist/css/timeline.css') }}" rel="stylesheet">

    <!-- Morris Charts CSS -->
    <link href="{{ asset('bundles/mkapp/libs/sb-admin/bower_components/morrisjs/morris.css') }}" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="{{ asset('bundles/mkapp/libs/sb-admin/bower_components/font-awesome/css/font-awesome.min.css') }}"
          rel="stylesheet" type="text/css">

    <!-- Custom CSS -->
    <link href="{{ asset('bundles/mkapp/libs/sb-admin/dist/css/sb-admin-2.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/mkapp/assets/css/main.css') }}" rel="stylesheet"/>

    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body class="{% block body_classes_names %}{% endblock %}">

<div class="flash-messages">
    {% set flashbag = app.session.flashbag.all() %}
    {% if flashbag is not empty %}
        <div class="container">
            <div class="row margin-top">
                <div class="col-sm-12">
                    {% for type,flash_messages in flashbag %}
                        {% for message in flash_messages %}
                            <div class="alert alert-{{ type }}" role="alert">
                                <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                                {{ message|trans }}
                            </div>
                        {% endfor %}
                    {% endfor %}
                </div>
            </div>
        </div>
    {% endif %}
</div>

{% block body %}{% endblock %}

<footer class="footer">
    <div class="container">
        <p class="text-muted text-center">Place sticky footer content here.</p>
    </div>
</footer>

{% block javascripts %}
    <!-- jQuery -->
    <script src="{{ asset('bundles/mkapp/libs/jquery/jquery.min.js') }}"></script>
    <script src="{{ asset('bundles/mkapp/libs/bootstrap/js/bootstrap.min.js') }}"></script>


    <script src="{{ asset('bundles/mkapp/assets/js/jquery.datetimepicker.js') }}"></script>
    <script src="{{ asset('bundles/mkapp/libs/colorpicker/js/bootstrap-colorpicker.min.js') }}"></script>

    <!-- Metis Menu Plugin JavaScript -->
    <script src="{{ asset('bundles/mkapp/libs/sb-admin/bower_components/metisMenu/dist/metisMenu.min.js') }}"></script>

    <!-- Morris Charts JavaScript -->
    <script src="{{ asset('bundles/mkapp/libs/sb-admin/bower_components/raphael/raphael-min.js') }}"></script>
    <script src="{{ asset('bundles/mkapp/libs/sb-admin/bower_components/morrisjs/morris.min.js') }}"></script>

    <!-- Custom Theme JavaScript -->
    <script src="{{ asset('bundles/mkapp/libs/sb-admin/dist/js/sb-admin-2.js') }}"></script>
    <script src="{{ asset('bundles/mkapp/assets/js/ajax.js') }}"></script>
    <script src="{{ asset('bundles/mkapp/assets/js/main.js') }}"></script>
{% endblock %}
</body>
</html>